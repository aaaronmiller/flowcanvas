{
  "name": "flowcanvas",
  "version": "1.0.0",
  "description": "Cognitive augmentation system for elite freestyle rappers",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "electron-builder",
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": ["freestyle", "rap", "cognitive-augmentation", "rhyme", "performance"],
  "author": "FlowCanvas Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "d3": "^7.8.5",
    "d3-force": "^3.0.0",
    "@tonejs/midi": "^2.0.28",
    "compromise": "^14.10.0",
    "natural": "^6.10.0",
    "sentiment": "^5.0.2",
    "react-hot-toast": "^2.4.1",
    "framer-motion": "^10.16.16",
    "webmidi": "^3.1.8"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5"
  },
  "build": {
    "appId": "com.flowcanvas.app",
    "mac": {
      "category": "public.app-category.music",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ]
  }
}
